# ---------- Nginx config (HTTP on ADMIN_PORT) ----------
cat > ${NGINX_CONF} <<EOF
server {
    listen ${ADMIN_PORT} ;
    server_name ${ADMIN_DOMAIN:-_};

    root ${PANEL_ROOT};
    index index.php index.html;

    location = / {
