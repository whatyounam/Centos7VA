if [ -n "${ADMIN_DOMAIN}" ]; then
  echo "üåê Domain: ${ADMIN_DOMAIN}"
  echo "üîß Truy c·∫≠p qu·∫£n tr·ªã: https://${ADMIN_DOMAIN}:${ADMIN_PORT}  (n·∫øu cert ƒë√£ s·∫µn s√†ng) ho·∫∑c http://${ADMIN_DOMAIN}:${ADMIN_PORT}"
else
  echo "üîß Truy c·∫≠p qu·∫£n tr·ªã: http://<SERVER_IP>:${ADMIN_PORT}"
